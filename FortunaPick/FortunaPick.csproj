<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>Exe</OutputType>
		<TargetFramework>net8.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<PackageId>FortunaPick</PackageId>
		<Version>1.0.0</Version>
		<FileVersion>1.0.0</FileVersion>
		<AssemblyVersion>1.0.0</AssemblyVersion>
		<Description>FortunaPick: Your Lottery Number Ally</Description>
		<Authors>Matthew Lewis</Authors>
		<Company>mlewisonline</Company>
		<Copyright>Matthew Lewis 2024</Copyright>
	</PropertyGroup>

	<ItemGroup>
	  <None Remove="GameStats\euromillions.json" />
	  <None Remove="GameStats\lotto.json" />
	  <None Remove="GameStats\setforlife.json" />
	  <None Remove="GameStats\thunderball.json" />
	</ItemGroup>

	<ItemGroup>
	  <Content Include="GameStats\euromillions.json">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </Content>
	  <Content Include="GameStats\lotto.json">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </Content>
	  <Content Include="GameStats\setforlife.json">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </Content>
	  <Content Include="GameStats\thunderball.json">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </Content>
	</ItemGroup>

</Project>
